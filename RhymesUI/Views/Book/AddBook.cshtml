@model RhymesUI.Models.BookViewModel
@{
    ViewData["Title"] = "AddBook";
    
}

<h2>AddBook</h2>

<form asp-controller="Book" asp-action="AddBook" method="post" enctype="multipart/form-data">
    <div class="row">

        <div class="card col-md-8 mt-5">

            <div class="card-body">
                <div class="form-group col-md-6">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" />
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="Genre"></label>
                    <input asp-for="Genre" class="form-control" />
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control" type="number" />
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="AuthorName"></label>
                    <input asp-for="AuthorName" class="form-control" />
                </div>

                <div class="form-group col-md-12">
                    <label asp-for="AuthorBio"></label>
                    <textarea asp-for="AuthorBio" cols="12" rows="6" class="form-control"></textarea>
                </div>

                <div class="form-group col-md-12">
                    <label asp-for="Synopsis"></label>
                    <textarea asp-for="Synopsis" cols="12" rows="6" class="form-control"></textarea>
                </div>

                <div class="form-group col-md-12">
                    <label asp-for="MarketingPlan"></label>
                    <textarea asp-for="MarketingPlan" cols="12" rows="6" class="form-control"></textarea>
                </div>
            </div>

        </div>

        <div class="col-md-4">
            <input type="file" class="form-control" id="file"/>
        </div>
    </div>
    


    
</form>

